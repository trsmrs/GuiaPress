<!DOCTYPE html>
<html lang="pt-BR">
<head>
   <%- include('./partials/head.ejs') %>
</head>
<body>
    <%- include('./partials/homeNavbar.ejs') %>
    <form class="form-control">

        <div class="container">
          <div class="jumbotron">
              <h1 class="display-4">Bem-vindo</h1>
              <p class="lead">Este é um simples Blog criado em estudos de Node.js</p>
              <hr class="my-4">
              <p>Descrições aqui</p>
              <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
          </div>      



            <hr>
            <% articles.forEach(article => { %>
              <div class="card">
                  <div class="card-header">
                      <h2><%= article.title %></h2>
                  </div>
                  <div class="card-body">
                    <a class="btn btn-success" href="/<%= article.slug %>">Ler Artigo</a>
                  </div>
              </div>
              <br>
            <%})%>    
        </div>
    </form>
    <%- include('./partials/foot.ejs') %>
</body>
</html>